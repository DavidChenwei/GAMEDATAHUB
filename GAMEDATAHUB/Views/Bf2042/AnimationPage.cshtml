        anime({
            targets: '#AnimationPage-svg path',
            strokeDashoffset: [anime.setDashoffset, 0],
            easing: 'easeInOutQuad',
            duration: 1500,
            direction: 'alternate',
            loop: true
        });

        document.addEventListener("DOMContentLoaded", function () {
            var form = document.getElementById("animationForm");
